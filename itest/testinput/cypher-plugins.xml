<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean class="cn.pandadb.database.CypherPluginRegistry">
        <!-- defines all extractors -->
        <property name="extractors">
            <list>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.common.AnyPropertyExtractor"/>
                    </property>
                    <property name="domain" value="*"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.text.ChineseTokenizer"/>
                    </property>
                    <property name="domain" value="string"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.text.SentimentClassifier"/>
                    </property>
                    <property name="domain" value="string"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.common.AnyBlobPropertyExtractor"/>
                    </property>
                    <property name="domain" value="blob/*"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.image.ImageMetaDataExtractor"/>
                    </property>
                    <property name="domain" value="blob/image"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.image.PlateNumberExtractor"/>
                    </property>
                    <property name="domain" value="blob/image"/>
                </bean>
                <bean class="cn.pandadb.database.DomainExtractorEntry">
                    <property name="extractor">
                        <bean class="cn.pandadb.oplib.image.DogOrCatClassifier"/>
                    </property>
                    <property name="domain" value="blob/image"/>
                </bean>
            </list>
        </property>
        <!-- defines all comparators -->
        <property name="comparators">
            <list>
                <bean class="cn.pandadb.database.DomainComparatorEntry">
                    <property name="name" value="face"/>
                    <property name="domain" value="blob/image:blob/image"/>
                    <property name="threshold" value="0.6"/>
                    <property name="comparator">
                        <bean class="cn.pandadb.oplib.image.FaceSimilarityComparator"/>
                    </property>
                </bean>
                <bean class="cn.pandadb.database.DomainComparatorEntry">
                    <property name="name" value="jaro"/>
                    <property name="domain" value="string:string"/>
                    <property name="threshold" value="0.7"/>
                    <property name="comparator">
                        <bean class="cn.pandadb.oplib.text.JaroWinklerStringSimilarity"/>
                    </property>
                </bean>
                <bean class="cn.pandadb.database.DomainComparatorEntry">
                    <property name="name" value="jaccard"/>
                    <property name="domain" value="string:string"/>
                    <property name="threshold" value="0.7"/>
                    <property name="comparator">
                        <bean class="cn.pandadb.oplib.text.JaccardStringSimilarity"/>
                    </property>
                </bean>
                <bean class="cn.pandadb.database.DomainComparatorEntry">
                    <property name="name" value="cosine"/>
                    <property name="domain" value="string:string"/>
                    <property name="threshold" value="0.7"/>
                    <property name="comparator">
                        <bean class="cn.pandadb.oplib.text.CosineStringSimilarity"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>